@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}
<br />
<br />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))@*aynı safya içerisinde hem post hem listeleme yapacağım için htmlbeginform kullandım partial veya viewcomponenet de kullanabilirdim.*@
    {
        <label>Şehir ID Bilgisini Giriniz</label>
        <input type="text" class="form-control" name="cityID" />
        <br />
        <button class="btn btn-primary">Şehir İçin Otelleri Listele </button>
    }


    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </table>
</div>
